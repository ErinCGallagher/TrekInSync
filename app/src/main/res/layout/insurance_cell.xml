<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="1"
            tools:text="Label" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minWidth="100dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/checkbox_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                tools:text="Call First"
                android:layout_weight="2.5"/>

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_weight=".5"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="phone number"/>

    <LinearLayout
        android:id="@+id/details_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/details_label1"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Policy #" />
        <TextView
            android:id="@+id/details_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="16748263" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/details_label2"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Cert #" />
        <TextView
            android:id="@+id/details_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="987" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details_container3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/details_label3"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Group #" />
        <TextView
            android:id="@+id/details_number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="876566242" />
    </LinearLayout>

</LinearLayout>